{
  "name": "stoat-action",
  "version": "0.0.9",
  "private": false,
  "description": "Supercharge your CI / CD pipelines",
  "main": "src/app.ts",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write '**/*.{ts,js,json}'",
    "format-check": "prettier --check '**/*.{ts,js,json}'",
    "lint": "eslint src/**/*.ts",
    "package": "ncc build --source-map --license licenses.txt",
    "test": "jest --coverage",
    "all": "npm run build && npm run format && npm run lint && npm run package && npm test",
    "prepare": "cd .. && husky install action/.husky",
    "script": "npx ts-node"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stoat-dev/stoat-action.git"
  },
  "keywords": [
    "actions",
    "ci",
    "cd",
    "github",
    "stoat"
  ],
  "author": "Stoat Dev",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@actions/exec": "^1.1.1",
    "@actions/github": "^5.1.1",
    "ajv": "^8.12.0",
    "bluebird": "^3.7.2",
    "cross-env": "^7.0.3",
    "cross-fetch": "^3.1.5",
    "eslint-plugin-prettier": "^4.2.1",
    "form-data": "^4.0.0",
    "handlebars": "^4.7.7",
    "jimp": "^0.16.2",
    "lodash": "^4.17.21",
    "mime-types": "^2.1.35",
    "pixelmatch": "^5.3.0",
    "pngjs": "^7.0.0"
  },
  "devDependencies": {
    "@octokit/openapi-types": "^17.2.0",
    "@trivago/prettier-plugin-sort-imports": "^4.1.1",
    "@types/bluebird": "^3.5.37",
    "@types/js-yaml": "^4.0.5",
    "@types/lodash": "^4.14.195",
    "@types/mime-types": "^2.1.1",
    "@types/node": "^20.2.5",
    "@types/pixelmatch": "^5.2.4",
    "@types/pngjs": "^6.0.1",
    "@vercel/ncc": "^0.36.1",
    "eslint": "^8.41.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-github": "^4.6.1",
    "eslint-plugin-jest": "^27.2.1",
    "husky": "^8.0.3",
    "install": "^0.13.0",
    "jest": "^29.5.0",
    "js-yaml": "^4.1.0",
    "lint-staged": "^13.2.2",
    "prettier": "2.8.8",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4",
    "utility-types": "^3.10.0"
  },
  "lint-staged": {
    "*.{ts,js,json}": [
      "prettier --write"
    ]
  }
}
